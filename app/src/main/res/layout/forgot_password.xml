<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="20dp"
    android:id="@+id/root_layout">

    <!--        text forgot Password-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:fontFamily="@font/alegreya_medium"
        android:text="Forgot Password?"
        android:textColor="@color/main_primary"
        android:textSize="36sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp" >

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_border2"
            android:hint="Enter your email"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawableTint="@color/foundation_grey"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:fontFamily="@font/mulish_regular" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="16dp"
        android:text="Reset Password"
        android:textSize="24sp"
        android:fontFamily="@font/mulish_bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Check your email to reset password"
        android:textSize="16sp"
        android:fontFamily="@font/mulish_medium_italic" />


</LinearLayout>